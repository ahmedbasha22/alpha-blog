
<body class="site-body site-body2">
  <% obj.each do |article| %>
    <div class="article-body list">
      <div>
        <%= link_to article.title, article_path(article), class: "article-title" %>
      </div>
      <div class="list-body">
        <%= truncate(article.description, length: 300) %>
      </div>
      <div class="meta-details">
        <small>Created by: <%= article.user.username if article.user %>,
           <%= time_ago_in_words(article.created_at) %> ago, last updated: <%= time_ago_in_words(article.updated_at) %> ago.</small>
      </div>
      <div class="article-btns">
        <%= link_to 'Edit this article', edit_article_path(article), class:"btn btn-primary round-btn" %>
        <%= link_to 'Delete this article', article_path(article), method: :delete, data: {confirm: "Are you sure you want to delete this article?"}, class:"btn btn-danger round-btn" %>
      </div>
    </div>
  <% end %>
</body>
