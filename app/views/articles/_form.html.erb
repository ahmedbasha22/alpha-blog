<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body class="site_body">
    <% if @article.errors.any? %>
      <div class="alert alert-danger" id="alert_body" role="alert">
        <div>
          <h2>
            <%= pluralize(@article.errors.count, "errors") %>
            prohibited this article from being saved:
          </h2>
          <div>
            <ul>
              <% @article.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <div class='row' id='create'>
      <div class='col-md-12'>
        <%= form_for @article do |f| %>
          <div class="form-group" >
            <div class="control-label col-sm-2">
              <%= f.label :title %>
            </div>
            <div class='col-sm-9'>
              <%= f.text_field :title, class: "form-control", placeholder: "Title of the article", autofocus: true %>
            </div>
          </div>
          <div class="form-group">
            <div class="control-label col-sm-2">
              <%= f.label :decription %>
            </div>
            <div class='col-sm-9'>
              <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Body of the article" %>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-10">
              <%= f.submit class: "btn btn-lg my_active_btn"%>
            </div>
          </div>


        <% end %>
        <div class="form-group" align='center'>
          <div class="col-sm-10">
            <%= link_to 'Cancel Request and return to articles listing', articles_path %>
          </div>
        </div>
      </div>
    </div>

  </body>
</html>
