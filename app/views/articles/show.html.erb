
<h2 align="center" class="head"><strong>Title: </strong><%= @article.title %></h2>
<body class="site-body">
  <div class="article-body">
    <% if @article.user %>
    <div align="center">
      <h6>Created by:</h6>
      <div class="gravatar">
        <%= link_to gravatar_for(@article.user), user_path(@article.user) %>
      </div>
      <div class="article-title name">
        <%= link_to @article.user.username, user_path(@article.user)%>
      </div>
    </div>
    <% end %>
    <h3 align="center" id="description"><strong>Description</strong></h3>
    <%= simple_format(@article.description) %>
    <div class="article-btns">
      <%= link_to 'Edit this article', edit_article_path(@article), class:"btn btn-primary round-btn" %>
      <%= link_to 'Delete this article', article_path(@article), method: :delete, data: {confirm: "Are you sure you want to delete this article?"}, class:"btn btn-danger round-btn" %>
      <%= link_to 'View all articles', articles_path, class:"btn my_active_btn round-btn active-round-btn" %>
    </div>
  </div>
  
</body>
